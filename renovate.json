{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": "docker base images",
      "semanticCommitType": "fix"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm dependencies",
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["images/builder/Dockerfile"],
      "matchStrings": ["ARG HUGO_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "semanticCommitType": "fix"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": ["pip install gitops-image-replacer==(?<currentValue>[^\\s]+)"],
      "depNameTemplate": "gitops-image-replacer",
      "datasourceTemplate": "pypi"
    }
  ]
}
